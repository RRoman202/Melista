<Window x:Class="Melista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Melista.ViewModels"
        xmlns:local="clr-namespace:Melista"
        mc:Ignorable="d"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Resources/Images/Dark Theme.png"/>
            </Border.Background>
            <Border.Effect>
                <BlurEffect Radius="0"></BlurEffect>
            </Border.Effect>
            <Grid Background="White" Opacity="0.13"></Grid>
        </Border>
        <Frame NavigationUIVisibility="Hidden"
               Content="{Binding PageSource}"></Frame>

        <Button Width="170" Height="35" Background="White" Opacity="0.5" Content="123aaa"  FontFamily="/Resources/Fonts/#Montserrat" FontWeight="Light"></Button>
    </Grid>
</Window>
