<Window x:Class="Melista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Melista.ViewModels"
        xmlns:local="clr-namespace:Melista"
        mc:Ignorable="d"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        MinHeight="450" MinWidth="800" Icon="/Resources/Icons/melista.png">
    <Grid Style="{DynamicResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="204*"/>
        </Grid.RowDefinitions>

        <Frame NavigationUIVisibility="Hidden"
               Content="{Binding PageSource}" Grid.Row="1"></Frame>
    </Grid>
</Window>
