<Window x:Class="Melista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Melista.ViewModels"
        xmlns:local="clr-namespace:Melista"
        mc:Ignorable="d"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Resources/Gradient.png"/>
            </Border.Background>
            <Border.Effect>
                <BlurEffect Radius="20"></BlurEffect>
            </Border.Effect>
        </Border>
        <Frame NavigationUIVisibility="Hidden"
               Content="{Binding PageSource}"></Frame>
        
    </Grid>
</Window>
