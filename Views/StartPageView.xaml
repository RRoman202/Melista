<Page x:Class="Melista.Views.StartPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Melista.Views"
      xmlns:viewmodels="clr-namespace:Melista.ViewModels"
      DataContext="{Binding StartPageViewModel, Source={StaticResource ViewModelLocator}}"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="StartPageView">

    <Grid Margin="10 15 10 15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2">
           
            <Grid.Effect>
                <BlurEffect Radius="80"/>
            </Grid.Effect>
            
        </Grid>
        <Border Opacity="0.6" Grid.Row="0" CornerRadius="50">
            <Border.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF292929"/>
                    <GradientStop Color="Black" Offset="0.4"/>
                    <GradientStop Color="#FF292929" Offset="1"/>
                    <GradientStop Color="Black" Offset="0.7"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="DarkBlue"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>

            </StackPanel>
        </Border>

        <Border Grid.Row="1" CornerRadius="20 20 20 20" Margin="100 10 100 10">
            <Border.Background>
                <SolidColorBrush Color="Black" Opacity="0.6"></SolidColorBrush>
            </Border.Background>
            <ListView Margin="30 30 30 0" Background="Transparent"></ListView>
            <Border.Effect>
                <DropShadowEffect Color="DarkBlue"></DropShadowEffect>
            </Border.Effect>
        </Border>
        
    </Grid>
    
</Page>
