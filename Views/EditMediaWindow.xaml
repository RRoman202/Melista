<Window x:Class="Melista.Views.EditMediaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Melista.Views"
        mc:Ignorable="d"
        Title="Изменить файл" Height="500" Width="400"
        ResizeMode="NoResize"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        DataContext="{Binding EditMediaWindowViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <StackPanel>
            <TextBlock Height="30" Text="Название"/>
            <TextBox Height="30"/>
            <TextBlock Height="30" Text="Год"/>
            <TextBox Height="30"/>
            <TextBlock Height="30" Text="Жанр"/>
            <TextBox Height="30"/>
            <TextBlock Height="30" Text="Режиссер"/>
            <TextBox Height="30"/>
            <TextBlock Height="30"  Text="Комментарии"/>
            <TextBox Height="30"/>
        </StackPanel>
    </Grid>
</Window>
